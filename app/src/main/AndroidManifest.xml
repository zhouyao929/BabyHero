<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doouya.babyhero" >

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:name=".BabyHeroApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".activity.WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" >
        </activity>
        <activity android:name=".activity.MainActivity" >
        </activity>
        <activity android:name=".activity.CurrentTempActivity" >
        </activity>
        <activity android:name=".activity.SleepTimeActivity" >
        </activity>
        <activity android:name=".activity.CalActivity" >
        </activity>
        <activity android:name=".activity.SettingActivity" >
        </activity>
        <activity
            android:name=".activity.SecurityActivity"
            android:label="@string/title_activity_security" >
        </activity>

        <service android:name=".ble.BluetoothLeService" android:enabled="true"/>
    </application>

</manifest>
